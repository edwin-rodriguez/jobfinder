link(rel='stylesheet', href='bower_components/bootstrap/dist/css/bootstrap.css')

script(type='text/javascript', src='bower_components/angular/angular.min.js')
script(type='text/javascript', src='bower_components/angular-resource/angular-resource.js')
script(type='text/javascript', src='/app/app.js')
script(type='text/javascript', src='/app/jobs.js')

body(ng-app='app')
  .container
    div(ng-controller='testCtrl')
      h1 JobFinder
      h2 Post a new job :)
      form(ng-submit='submit()')
        .form-group
          input.form-control(placeholder='Job Title', ng-model='title')
        .form-group
          textarea.form-control(placeholder='Description', ng-model='description')
        .form-group
          button.btn.btn-primary(type='submit') Post
      h2 Find a Job Today!!!
        .list-group
          a.list-group-item(href='#')(ng-repeat='job in jobs')
            h4.list-group-item-header {{job.title}}
            p.list-group-item-text {{job.description}}
